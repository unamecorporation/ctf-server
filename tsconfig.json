{
  "compilerOptions": {
    "paths": { "*": ["types/*"] },
    "module": "commonjs",
    "removeComments": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "newLine": "LF",
    "pretty": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "esModuleInterop": true,
    "target": "es2015",
    "lib": ["es6", "es2018", "es7", "dom", "esnext", "es2015.iterable", "scripthost"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "./src"
  },
  "typeAcquisition": { "enable": true },
  "include": ["src/**/*"]
}
